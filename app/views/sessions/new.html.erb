<html>
  <head>
  </head>

  <body>

    <div class="container py-5 text-center">
      <h1 style="color: #053557">Sign in</h1>

      <div class="m-5 px-5">
        <%= form_for :user, url: sessions_path do |f| %>

          <div class="form-group">
            <%= f.text_field :email, class: 'form-control', placeholder: 'Your Email' %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class: 'form-control', placeholder: 'Your Password' %>
          </div>
          <div class="btn-group mr-2" role="group">
            <%= submit_tag "Let's go", class: "btn btn-dark mx-1" %> 
          </div>
        <% end %>
      </div>
    </div>

  </body>

</html>
