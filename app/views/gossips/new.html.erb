
<html>
  <head>
  </head>
  <body>
    <% if @gossip.errors.any? %>
    <div class="container alert alert-danger mt-3 pt-3 pb-1" role="alert">
        <p>We could not create the gossip for the following reasons:</p>
        <ul>
          <% @gossip.errors.each_with_index do |message, i| %>
            <li><%= message[1] %></li>
          <% end %>
        </ul>
    </div>
    <% end %>
    <div class="container text-center mt-5">
      <h1 style="color: #053557">Add your Gossip!</h1>
      <div class="m-5 px-5">
        <%= form_tag url_for(action: 'create'), method: "post" do %>

          <div class="form-group">
          <%= text_field_tag 'title', @gossip.title, class: 'form-control', placeholder: 'Title' %>
          </div> 

          <div class="form-group">
          <%= text_area_tag 'content', @gossip.content, class: 'form-control', placeholder: 'Content' %>
          </div> 
          <div class="btn-group mr-2" role="group">
            <%= submit_tag "Add", class: "btn btn-dark mx-1" %> 
          </div>
        <% end %>
      </div>
    </div>
  </body>
</html>